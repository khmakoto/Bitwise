<% @page_title = "Publication | Create" %>
<% if @publication.errors.any? %>
  <div class="signUpErrors">
  <% for message_error in @publication.errors.full_messages %>
    <p>* <%= message_error %></p>
  <% end %>
  </div>
<% end %>
<div class="signUpForm">
  <h1>Article</h1>
  <%= form_for(:publication, :url => {:controller => 'publications', :action => 'create'}) do |f| %>
    <p class="signField"> Title:</br> <%= f.text_field :title, class: "articleTextBox" %> </p>
    <%=f.hidden_field :publication_type, :value => @type%>
    <p class="signField"> Section:</br> </p>
      <%= f.radio_button :section, 'Tech News', class: "articleSection" %> Tech News <br>
      <%= f.radio_button :section, 'Gadgets', class: "articleSection" %> Gadgets <br>
      <%= f.radio_button :section, 'Gaming', class: "articleSection" %> Gaming
    <p class="signField"> Intro:</br> <%= f.text_area :intro, class: "introField" %> </p>
    <p class="signField"> Content:</br> <%= f.text_area :content, class: "contentField" %> </p>
    <p class="signField"> Image Url:</br> <%= f.text_field :img_string, class: "articleTextBox" %> </p>
    <%= submit_tag("Create Article", :class => "signButton")  %>
  <% end %>
</div>

<div class="floatClearer"></div>