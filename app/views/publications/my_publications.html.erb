<%if @my_publications.length == 0%>
  <h3>You have not published anything yet</h3>
<%else%>
  <div id="articleInnerContainer" class="articleOuterContainer">
    <table class="articleTable">
      <tr>
        <th colspan="2"><%= "Your Articles/Reviews"%></th>
      </tr>
      <%@my_publications.all.each do |p|%>
        <tr>
          <td class="articleImageCell">
            <%= image_tag(p.img_string, :class => "articleImageShow") %>
          </td>
          <td class="articleTitleCell">
            <p><%=link_to p.title, publication_path(p)%></p><br/>
            <p class="articleDescriptionCell"><%=p.intro%></p>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
<%end%>

<div class="floatClearer"></div>