<% @page_title = "Publication | Create" %>
<div class="signUpForm">
  <h1>Review</h1>
  <%= form_for(:publication, :url => {:controller => 'publications', :action => 'create'}) do |f| %>
    <p class="signField"> Title:</br> <%= f.text_field :title%> </p>
    <%=f.hidden_field :publication_type, :value => @type%>
    <p class="signField"> Intro:</br> <%= f.text_area :intro%> </p>
    <p class="signField"> Content:</br> <%= f.text_area :content%> </p>
    <p class="signField"> Image Url:</br> <%= f.text_field :img_string%> </p>
    <p class="signField"> Summary:</br> <%= f.text_area :summary%> </p>
    <p class="signField"> Grade:</br> <%= f.number_field :grade, :max => 10, :step => 0.1%> </p>
    <%= submit_tag("Create Review", :class => "signButton")  %>
  <% end %>
  <% if @publication.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @publication.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>