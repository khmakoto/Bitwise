<%if @reading_publications.length == 0%>
  <h1>No Articles or Reviews have been added to yor reading list</h1>
<%else%>
  <div id="mainMenuArticleContainer1" class="mainMenuArticleContainer">
    <table class="mainMenuArticleTable">
      <tr>
        <th colspan="2"><%= "Your Reading List"%></th>
      </tr>
      <%@reading_publications.all.each do |p|%>
        <tr>
          <td class="articleSectionImageCell">
            <%= image_tag(p.img_string, :class => "articleImage") %>
          </td>
          <td class="articleSectionTitleCell">
            <p><%=link_to p.title, publication_path(p)%></p>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
<%end%>