<%= form_for @user do |f| %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <p> Name:</br> <%= f.text_field :username%> </p>
    <p> Email:</br> <%= f.text_field :email%> </p>
    <p> Password:</br> <%= f.password_field :password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%></p>
    <div class="accountInformationCheckbox">
      <%= f.check_box :tech_preference %> Tech News<br />
      <%= f.check_box :gadget_preference %> Gadgets<br />
      <%= f.check_box :gaming_preference %> Gaming<br />
    </div>
 
  <p>
    <%= f.submit%>
  </p>
 
<% end %>